  <body>
    
<header class="navbar navbar-dark sticky-top bg-secondary flex-md-nowrap p-0 shadow">
  <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">Sistema de Turnos</a>
  <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
 
  <div class="navbar-nav">
    <div class="nav-item text-nowrap">
      <a type="button" class="px-3 btn btn-danger" href="logout">Salir</a>
    </div>
  </div>
</header>

<div class="container-fluid">
  <div class="row">
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-secondary sidebar collapse">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li>
            <a href="/" class="nav-link text-white">
              <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
              Inicio
            </a>
          </li>
          <li>
            <a href="/turnos" class="nav-link text-white">
              <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
              Mis turnos
            </a>
          </li>
          <li>
            <a href="logout" class="nav-link text-white">
              <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
              Salir
            </a>
          </li>
        </ul>
      </div>
    </nav>
    
    <!-- Contenido principal   -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2>Mis turnos</h2>
      </div>
      
      <!-- Contenido principal detalle de turnos  -->
      <div class="container mt-5">
        <a href="/turnos_create" class="btn btn-outline-danger mt-4">Nuevo turno</a>
        <br>
        <br>
        <div class="row">
          <div class="col-md-7">
            <table class="table table-light  table-bordered table-hover">
              <thead>
                <tr>
                  <td>Id</td>
                  <td>Especialidad</td>
                  <td>Medico</td>
                  <td>Fecha</td>
                  <td>Horario</td>
                  <td>Acciones</td>
                </tr>
              </thead>
              <tbody>
                <tbody> 
                    <% if (turnos) { %> <% for(var i = 0; i < turnos.length; i++) {
                    %>
                    <tr>
                      <td><%= turnos[i].idturno %></td>
                      <td><%= turnos[i].especialidad %></td>
                      <td><%= turnos[i].medico %></td>
                      <td><%= turnos[i].fecha %></td>
                      <td><%= turnos[i].horario %></td>
                      <td class="d-flex gap-2">
                        <a href="turnos_delete/<%= turnos[i].idturno %>" class="btn btn-danger">
                          Borrar
                        </a>
                      </td>
                    </tr>
                    <% } %> <% } %>
                </tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div> 
    </main>
  </div>
</div>  
